<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/relParent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relDeviceInfo"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <controls.VillaTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblDeviceInfo"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="12sp"
            android:maxLines="3"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/relDeviceInfo"
        android:layout_marginTop="5dp">

        <controls.VillaTextView
            android:id="@+id/btnSubscription"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="@string/subscription"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_bg_celest"
            android:textColor="#ffffff"
            android:maxLines="1"/>

        <controls.VillaTextView
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="@string/editar"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/btn_bg_celest"
            android:textColor="#ffffff"
            android:maxLines="1"/>

        <CheckBox
            android:id="@+id/cboxShowOnMap"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/mostrar"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_bg_celest"
            android:textColor="#ffffff"
            android:paddingRight="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp" />
    </LinearLayout>
</RelativeLayout>